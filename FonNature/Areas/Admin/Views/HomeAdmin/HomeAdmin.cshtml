}


@section jsfooter{
    <script>
        $(document).ready(function () {
            //BOX BUTTON SHOW AND CLOSE
            jQuery('.small-graph-box').hover(function () {
                jQuery(this).find('.box-button').fadeIn('fast');
            }, function () {
                jQuery(this).find('.box-button').fadeOut('fast');
            });
            jQuery('.small-graph-box .box-close').click(function () {
                jQuery(this).closest('.small-graph-box').fadeOut(200);
                return false;
            });

            //CHARTS
            function gd(year, day, month) {
                return new Date(year, month - 1, day).getTime();
            }

            graphArea2 = Morris.Area({
                element: 'hero-area',
                padding: 10,
                behaveLikeLine: true,
                gridEnabled: false,
                gridLineColor: '#dddddd',
                axes: true,
                resize: true,
                smooth: true,
                pointSize: 0,
                lineWidth: 0,
                fillOpacity: 0.85,
                data: [
                    { month: '@DateTime.Now.AddMonths(-8).ToString("yyyy-MM")', booking: @ViewBag.CountBooking8, order: @ViewBag.CountOrder8, visitor: @ViewBag.CountVisitor8 },
                    { month: '@DateTime.Now.AddMonths(-7).ToString("yyyy-MM")', booking: @ViewBag.CountBooking7, order: @ViewBag.CountOrder7, visitor: @ViewBag.CountVisitor7 },
                    { month: '@DateTime.Now.AddMonths(-6).ToString("yyyy-MM")', booking: @ViewBag.CountBooking6, order: @ViewBag.CountOrder6, visitor: @ViewBag.CountVisitor6 },
                    { month: '@DateTime.Now.AddMonths(-5).ToString("yyyy-MM")', booking: @ViewBag.CountBooking5, order: @ViewBag.CountOrder5, visitor: @ViewBag.CountVisitor5 },
                    { month: '@DateTime.Now.AddMonths(-4).ToString("yyyy-MM")', booking:@ViewBag.CountBooking4, order: @ViewBag.CountOrder4, visitor: @ViewBag.CountVisitor4 },
                    { month: '@DateTime.Now.AddMonths(-3).ToString("yyyy-MM")', booking: @ViewBag.CountBooking3, order: @ViewBag.CountOrder3, visitor: @ViewBag.CountVisitor3 },
                    { month: '@DateTime.Now.AddMonths(-2).ToString("yyyy-MM")', booking:@ViewBag.CountBooking2, order: @ViewBag.CountOrder2, visitor: @ViewBag.CountVisitor2 },
                    { month: '@DateTime.Now.AddMonths(-1).ToString("yyyy-MM")', booking: @ViewBag.CountBooking1, order: @ViewBag.CountOrder1, visitor: @ViewBag.CountVisitor1 },
                    { month: '@DateTime.Now.ToString("yyyy-MM")', booking: @ViewBag.BookingQuantity, order: @ViewBag.OrderQuantity, visitor: @ViewBag.CountVisitor },

                ],
                lineColors: ['#a44e4e', '#926383', '#eb6f6f '],
                xkey: 'month',
                redraw: true,
                ykeys: ['booking', 'order', 'visitor'],
                labels: ['Booking Total', 'Orders Total', 'Visitor Total'],
                pointSize: 2,
                hideHover: 'auto',
                resize: true
            });


        });
    </script>
}
