@model List<Models.Entity.About>

<div class="sec--testimonial--home-1 parallax100" style="background-image: url('assets/images/bg-04.jpg');">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="hun-element-testimonial layout-1">
                    <div class="slide-ava js-call-slick" data-animate="true">
                        <div id="ava-tes-01" class="slide-slick" data-slick='{"asNavFor": "#text-tes-01", "centerMode": true, "centerPadding": "0px", "focusOnSelect": true, "fade": false, "speed": 500, "dots": false, "arrows": false, "autoplay": false, "autoplaySpeed": 5000, "infinite": true, "slidesToShow": 3, "slidesToScroll": 1}'>
                            @foreach (var item in Model)
                            {
                                <div class="item-slick">
                                    <div class="wrap-ava">
                                        <img src="@item.Image" alt="IMG">
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="slide-text js-call-slick" data-animate="true">
                        <div id="text-tes-01" class="slide-slick" data-slick='{"asNavFor": "#ava-tes-01", "fade": true, "speed": 500, "dots": false, "arrows": false, "autoplay": false, "autoplaySpeed": 5000, "infinite": true, "slidesToShow": 1, "slidesToScroll": 1}'>
                            @foreach (var item in Model)
                            {
                                    <div class="item-slick">
                                        <div class="content-tes" data-appear="fadeInUp" data-delay="0">
                                            <img class="mark-tes" src="/Asset/Spa/images/icons/mark-tes-01.png" alt="IMG" data-appear="fadeInDown" data-delay="100">
                                            @item.Description
                                        </div>
                                        <div class="star-tes" data-appear="zoomIn" data-delay="600">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                        <div class="author-tes" data-appear="zoomIn" data-delay="1200">
                                            <span class="name-author">@item.Author</span> / @item.Role
                                        </div>
                                    </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>