                                        <span class="item-info">
                                            <i class="zmdi zmdi-money-box"></i>
                                            $@item.price
                                        </span>

                                        <span class="item-info">
                                            <i class="zmdi zmdi-alarm-check"></i>

                                        </span>
                                    </div>

                                    <div class="description-item">
                                        @item.description
                                    </div>
                                </div>

                                <div class="foot-item">
                                    <div class="author-item">
                                        <a href="#" class="pic-author">
                                            <img src="~/Asset/Spa/images/ava-01.jpg" alt="IMG">
                                        </a>

